<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MedicalChartApp.Pages.MedicalNotePage"
             Title="Medical Notes">

    <StackLayout Padding="10" Spacing="10">
        <CollectionView x:Name="PatientList" SelectionMode="Single"
                        SelectionChanged="OnPatientSelected">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="Gray" Padding="5" Margin="5">
                        <Label Text="{Binding Name}" FontSize="18"/>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <CollectionView x:Name="NoteList" SelectionMode="Single"
                        SelectionChanged="OnNoteSelected" HeightRequest="200">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="Gray" Padding="5" Margin="5">
                        <Label Text="{Binding Diagnosis}" />
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Text="Add Note" Clicked="OnAddNoteClicked"/>
        <Button Text="Edit Note" Clicked="OnEditNoteClicked"/>
        <Button Text="Delete Note" Clicked="OnDeleteNoteClicked"/>
    </StackLayout>
</ContentPage>
