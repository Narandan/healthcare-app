<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MedicalChartApp.Pages.PatientPage"
             Title="Patients">

    <StackLayout Padding="10" Spacing="10">
        <CollectionView x:Name="PatientList" SelectionMode="Single"
                        SelectionChanged="OnPatientSelected">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="Gray" Padding="5" Margin="5">
                        <Label Text="{Binding Name}" FontSize="18"/>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Text="Add Patient" Clicked="OnAddPatientClicked"/>
        <Button Text="Edit Patient" Clicked="OnEditPatientClicked"/>
        <Button Text="Delete Patient" Clicked="OnDeletePatientClicked"/>
    </StackLayout>
</ContentPage>
