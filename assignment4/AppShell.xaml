<?xml version="1.0" encoding="utf-8" ?>
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:MedicalChartApp.Pages"
    x:Class="MedicalChartApp.AppShell">

    <FlyoutItem Title="Patients">
        <ShellContent ContentTemplate="{DataTemplate pages:PatientPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Physicians">
        <ShellContent ContentTemplate="{DataTemplate pages:PhysicianPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Appointments">
        <ShellContent ContentTemplate="{DataTemplate pages:AppointmentPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Medical Notes">
        <ShellContent ContentTemplate="{DataTemplate pages:MedicalNotePage}" />
    </FlyoutItem>

</Shell>
